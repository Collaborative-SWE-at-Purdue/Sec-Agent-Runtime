{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // Use standard ES module syntax
    "moduleResolution": "node",
    "esModuleInterop": true, // Allows default imports from CommonJS if needed
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "resolveJsonModule": true
  },
  "include": ["runtime/src/**/*", "api/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
